<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
        android:id="@+id/stackNum"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/spinner_image"
        android:layout_weight="0.3"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="1"
        android:textColor="#5e6472"
        android:textSize="18sp"></TextView>
    <TextView
        android:id="@+id/stackGiverName"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/spinner_image"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="콩쥐맘"
        android:textColor="#5e6472"
        android:textSize="18sp"></TextView>
    <TextView
        android:id="@+id/stackReward"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/spinner_image"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="LEGO 타지마할"
        android:textColor="#5e6472"
        android:textSize="18sp"></TextView>
    <TextView
        android:id="@+id/stackDate"
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/spinner_image"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="2022/12/10"
        android:textColor="#5e6472"
        android:textSize="18sp"></TextView>
</LinearLayout>
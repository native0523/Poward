<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FAF3DD">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/stackNum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_toEndOf="@id/spinner_image"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="1"
            android:textColor="#5e6472"
            android:textSize="18sp"></TextView>
        <TextView
            android:id="@+id/stackGiverName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_toEndOf="@id/spinner_image"
            android:fontFamily="sans-serif"
            android:text="콩쥐맘"
            android:textColor="#5e6472"
            android:textSize="18sp"></TextView>
        <TextView
            android:id="@+id/stackReward"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_toEndOf="@id/spinner_image"
            android:fontFamily="sans-serif"
            android:text="LEGO 타지마할"
            android:textColor="#5e6472"
            android:textSize="18sp"></TextView>
        <TextView
            android:id="@+id/stackDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_toEndOf="@id/spinner_image"
            android:fontFamily="sans-serif"
            android:text="2022/12/10"
            android:textColor="#5e6472"
            android:textSize="18sp"></TextView>
    </LinearLayout>
</LinearLayout>